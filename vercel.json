{
  "version": 2,
  "name": "jokervision-autofollow",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://jokervision-backend.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "https://jokervision-backend.up.railway.app"
  },
  "build": {
    "env": {
      "REACT_APP_BACKEND_URL": "https://jokervision-backend.up.railway.app"
    }
  }
}